{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/ui/*": [
        "src/ui/*"
      ],
      "@/ui/components/*": [
        "src/ui/components/*"
      ],
      "@/ui/modules/*": [
        "src/ui/modules/*"
      ],
      "@/ui/hooks/*": [
        "src/ui/hooks/*"
      ],
      "@/ui/state/*": [
        "src/ui/state/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/enums/*": [
        "src/enums/*"
      ],
      "@/schema/entities/*": [
        "src/data-models/entities/*"
      ],
      "@/schema/types/*": [
        "src/data-models/types/*"
      ],
      "@/schema/validation/*": [
        "src/data-models/validation/*"
      ],
      "@/schema/utils/*": [
        "src/data-models/utils/*"
      ],
      "@/handlers/*": [
        "src/handlers/*"
      ]

    },
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
